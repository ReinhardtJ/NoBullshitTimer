@using NoBullshitTimer.Client.Components
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="@($"w-{Size} h-{Size} {Class}")">
    @switch (Type)
    {
        case IconType.Close:
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            break;
        case IconType.Previous:
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 12H5m7 7l-7-7 7-7" />
            break;
        case IconType.Next:
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-7 7l7-7-7-7" />
            break;
        case IconType.Play:
            <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z" />
            break;
        case IconType.Pause:
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25v13.5m-7.5-13.5v13.5" />
            break;
        case IconType.Up:
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
            break;
        case IconType.Down:
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            break;
        case IconType.Add:
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            break;
        default:
            <span></span>
            break;
    }
</svg>

@code {
[Parameter] public IconType Type { get; set; }
[Parameter] public int Size { get; set; } = 6;
[Parameter] public string Class { get; set; } = "";
}
